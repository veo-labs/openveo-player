{
  "env": {

    // Add mocha environment globals
    "mocha": true

  },
  "globals": {

    // Add chai to environment globals but do not authorize to overwrite it
    "chai": false,
    "assert": false,

    // Add angular test properties to environment globals but do not authorize to overwrite it
    "inject": false,

    // Add videojs to environment globals but do not authorize to overwrite it
    "videojs": false,

    // Add dashjs to environment globals but do not authorize to overwrite it
    "dashjs": false,

    // Add touch properties to environment globals but do not authorize to overwrite it
    "DocumentTouch": false

  },
  "rules": {

    // Do not require consistent this as AngularJS encourages to use "ctrl" for controllers
    "consistent-this": 0

  }

}
